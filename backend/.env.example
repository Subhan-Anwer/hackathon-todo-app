# Database (Neon Serverless PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Authentication & Security Environment Variables
# Copy this file to .env.local and replace placeholders with actual values

# Shared JWT secret (CRITICAL: Must be same in frontend and backend)
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Better Auth configuration
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=REPLACE_WITH_BETTER_AUTH_SECRET
BETTER_AUTH_URL=http://localhost:3000

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000